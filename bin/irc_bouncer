#!/usr/bin/env ruby
require 'daemons'

options = {
	:app_name => 'irc_bouncer',
	:backtrace => true,
	:monitor => true,
	:log_dir => File.join(Dir.home, '.irc_bouncer'),
	:log_output => true,
	:dir_mode => :normal,
	:dir => File.join(Dir.home, '.irc_bouncer'),
}

Daemons.run(File.join(File.dirname(__FILE__), '..', 'lib', 'irc_bouncer.rb'), options)
